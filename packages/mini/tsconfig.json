{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["dom", "dom.iterable", "ES2016"],
    "types": ["vite/client", "node"],
    "typeRoots": [".", "./node_modules/@types"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noEmit": false,
    "build": true,
    "jsx": "react",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "build",
    "paths": {
      "@vite": ["server/@vite/index.js"],
      "@hooks/*": ["server/views/hooks/*"],
      "@third/*": ["server/@third/*"],
      "@component/*": ["server/views/component/*"]
    }
  },
  "include": [
    "src/server/**/*.ts", 
    "src/server/**/*.js",
    "src/cli/**/*.ts",
    "src/cli/**/*.ts",
  ],
  "exclude": ["node_modules", "./client", "./example"]
}
